
# Uncomment this line to define a global platform for your project
platform :ios, '8.0'

#use_frameworks!

def myPods
    pod 'ReactiveObjC'
    pod 'MagicalRecord'
    pod 'SDWebImage'
    pod 'MJRefresh'
    pod 'PureLayout'
    pod 'Fabric'
    pod 'Crashlytics'
end


target 'SnakeGame' do
    myPods
end

target 'SnakeGameTests' do
    inherit! :complete
    myPods
end

